<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:gravity="center_vertical"
    android:minHeight="80dp"
    >


    <TextView
        style="@style/list_item_text_view"
        android:text="Magnitude"
        android:id="@+id/tv_magnitude"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/magnitude_circle"
        android:gravity="center"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/tv_magnitude"
        android:layout_marginLeft="16dp">
            <TextView
                style="@style/list_item_text_view"
                android:layout_width="match_parent"
                android:text="CitySecondary"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/tv_citySecondary"
                android:textColor="@color/textColorEarthquakeDetails"
                />
            <TextView
                style="@style/list_item_text_view"
                android:text="CityPrimary"
                android:id="@+id/tv_cityPrimary"
                android:layout_width="match_parent"
                android:textColor="@color/textColorEarthquakeLocation"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/list_item_text_view"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Time"
            android:id="@+id/tv_time"
            android:layout_weight="1"
            android:textColor="@color/textColorEarthquakeDetails"/>

        <TextView
            style="@style/list_item_text_view"
            android:layout_width="match_parent"
            android:text="Date"
            android:id="@+id/tv_date"
            android:textColor="@color/textColorEarthquakeLocation"
            />
    </LinearLayout>

</LinearLayout>